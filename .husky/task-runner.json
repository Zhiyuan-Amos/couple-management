{
  "tasks": [
    {
      "name": "jb-cleanupcode",
      "group": "pre-commit",
      "command": "pwsh",
      "args": [
        "-Command",
        "$Joined = \"",
        "${all-files}",
        "\".Trim() -replace(' ', ';');",
        "dotnet jb cleanupcode Couple.sln --include=$Joined;"
      ],
      "include": [
        "**/*.csproj",
        "**/*.cs",
        "**/*.razor",
        "**/*.html",
        "**/*.css",
        "**/*.js",
        "**/*.json"
      ],
      "exclude": [
        ".husky/*.json",
        ".config/*.json"
      ]
    }
  ]
}
