{
  "tasks": [
    {
      "name": "dotnet-format-whitespace",
      "group": "pre-commit",
      "command": "pwsh",
      "args": [
        "-Command",
        "dotnet format whitespace --include",
        "${staged}"
      ],
      "include": [
        "**/*.cs",
        "**/*.csproj"
      ]
    },
    {
      "name": "dotnet-format-style",
      "group": "pre-commit",
      "command": "pwsh",
      "args": [
        "-Command",
        "dotnet format style --include",
        "${staged}"
      ],
      "include": [
        "**/*.cs",
        "**/*.csproj"
      ]
    },
    {
      "name": "jb-cleanupcode",
      "group": "pre-commit",
      "command": "pwsh",
      "args": [
        "-Command",
        "$Joined = \"",
        "${staged}",
        "\".Trim() -replace(' ', ';');",
        "jb cleanupcode Couple.sln --include=$Joined;"
      ],
      "include": [
        "**/*.razor.cs",
        "**/*.razor",
        "**/*.html",
        "**/*.css",
        "**/*.js",
        "**/*.json"
      ],
      "exclude": [
        ".husky/*.json",
        ".config/*.json"
      ]
    }
  ]
}
