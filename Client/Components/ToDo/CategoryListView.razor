@inherits BlazorStateComponent

<div class="h-100">
    <TelerikListView Data=@Categories>
        <Template>
            <div class="px-3 py-1 border-bottom d-flex align-items-center justify-content-between"
                 @onclick="@(_ => OnClickCallback.InvokeAsync(context))">
                <h3 class="text-break mb-0 user-select-none">
                    @context
                </h3>
            </div>
        </Template>
    </TelerikListView>
</div>
