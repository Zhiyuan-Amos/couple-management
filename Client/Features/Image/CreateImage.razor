@page "/image/create"

<CreateTopBar Title="New Image"/>
<div class="d-flex flex-column mh-100 overflow-auto" style="padding-bottom: 14px; padding-top: 56px;">
    <div class="m-3">
        <label class="mb-0 form-label">
            Date
        </label>
        <input type="date"
               @bind="@CreateImageStateContainer.DateTime">
    </div>
    <div class="m-3">
        <label class="mb-0 form-label">
            Favourite
        </label>
        <input @bind="@CreateImageStateContainer.IsFavourite"
               class="form-check-input"
               style="margin-top: 0; min-height: 2em; min-width: 2em;"
               type="checkbox">
    </div>
    @foreach (var data in CreateImageStateContainer.Data)
    {
        <img class="w-100 h-auto"
             src="data:image/bmp;base64, @(Convert.ToBase64String(data))"/>
    }
    <div class="px-3 py-3 border-bottom file-input-zone user-select-none">
        <InputFile OnChange="OnUploadImageSelected" multiple/>
        Upload Image
    </div>
    <div class="d-grid px-3">
        <button class="btn btn-secondary"
                disabled="@(!IsSaveEnabled)"
                @onclick="@Save"
                type="button">
            Save
        </button>
    </div>
</div>
