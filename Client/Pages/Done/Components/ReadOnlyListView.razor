@using Couple.Client.Utility

<div style="padding-bottom: 56px;" class="mh-100 overflow-auto">
    <Virtualize Items="@Issues" Context="issue">
        <div class="card bg-light mx-3 my-2">
            <div class="card-body">
                <div class="d-flex card-title">
                    <i style="@CssHelper.GetIcon(issue.For)"></i>
                    <h5 class="mb-0 ps-2">
                        @issue.Title
                    </h5>
                </div>
                @foreach (var task in issue.Tasks)
                {
                    <h6>
                        @task
                    </h6>
                }
            </div>
        </div>
    </Virtualize>
</div>
