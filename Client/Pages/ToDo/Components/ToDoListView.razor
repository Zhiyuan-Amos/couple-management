<div>
    <TelerikListView Data="@ToDos">
        <Template>
            <div class="card bg-light mx-3 my-2"
                 @onclick="@(() => EditToDo(context))">
                <div class="card-body">
                    <i style="@GetIcon(context.For)"></i>
                    <h5 class="card-title">
                        @context.Name
                    </h5>
                    @foreach (var (toDo, index) in context.ToDos.Select((item, index) => (item, index)))
                    {
                        <div style="min-height: 2rem; margin-bottom: .25rem;"
                             class="d-flex align-items-center">
                            <input style="height: 2em; width: 2em; margin-top: 0;"
                                   class="form-check-input"
                                   type="checkbox"
                                   checked="@toDo.IsCompleted"
                                   @onchange="@(_ => OnCheckboxToggle(context.Id, toDo))"
                                   id="@index"
                                   @onclick:stopPropagation=true>
                            <label class="ps-1"
                                   for="@index"
                                   @onclick:stopPropagation=true>
                                @toDo.Content
                            </label>
                        </div>
                    }
                </div>
            </div>
        </Template>
    </TelerikListView>
</div>
