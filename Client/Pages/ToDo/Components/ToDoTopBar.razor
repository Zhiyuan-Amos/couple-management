<BaseTopBar>
    <Content>
        <div class="position-absolute start-0 end-0 w-fit-content mx-auto d-flex align-items-center"
             @onclick="@OnClickCallback">
            <h3 class="text-truncate mb-0 pe-1 user-select-none">
                @(string.IsNullOrEmpty(SelectedCategory) ? "-No Category-" : SelectedCategory)
            </h3>
            <i class="bi bi-chevron-down h6 mb-0 @(IsDropDown ? "toggle-up" : "")" />
        </div>
    </Content>
</BaseTopBar>

