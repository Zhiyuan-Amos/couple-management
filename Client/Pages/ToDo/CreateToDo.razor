@page "/todo/create"

@inherits CreateToDoBase
@using Couple.Client.Components.ToDo

<CreateUpdateTopBar Title="Create To Do"
                    IsEnabled="@IsEnabled"
                    OnClickCallback="@Save" />
<CreateUpdateForm @bind-Text="@ToCreate.Text"
                  Category="@ToCreate.Category"
                  OnClickCallback="@ShowSelectionWindow" />
<AnimatedCategoryListViewWithAdd @ref="AnimatedCategorySelectionListView"
                                 OnConfirmCallback="@Select"
                                 OnCancelCallback="@CancelSelection" />

