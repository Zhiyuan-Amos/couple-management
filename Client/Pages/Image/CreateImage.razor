@page "/image/create"
@using Couple.Client.Pages.Image.Components

<CreateTopBar/>
<div style="padding-top: 56px; padding-bottom: 14px;" class="d-flex flex-column mh-100 overflow-hidden">
    <div class="m-3">
        <label class="mb-0 form-label">
            Favourite
        </label>
        <input style="min-height: 2em; min-width: 2em; margin-top: 0;"
               class="form-check-input"
               type="checkbox"
               @bind="@_image.IsFavourite">
    </div>
    @if (_image?.Data == null)
    {
        <div class="px-3 py-3 border-bottom file-input-zone user-select-none">
            <InputFile OnChange="OnUploadImageSelected"/>
            Upload Image
        </div>
    }
    else
    {
        <img class="w-100 h-auto"
             src="data:image/bmp;base64, @(Convert.ToBase64String(_image.Data))"/>
    }
    <div class="d-grid px-3">
        <button class="btn btn-secondary"
                type="button"
                @onclick="@Save">
            Save
        </button>
    </div>
</div>
