<div class="carousel slide" id="calendar-carousel">
    <div class="carousel-inner">
        <div class="carousel-item">
            1
        </div>
        <div class="carousel-item active">
            <div style="@Style">
                <div class="container text-center"
                     id="calendar-body"
                     @onkeypress:preventDefault="true"
                     @ontouchend="@_horizontalSwipeHandler.HandleTouchEnd"
                     @ontouchstart="@_horizontalSwipeHandler.HandleTouchStart">
                    <CalendarBodyComponent Cells="@GetCells(DateTime.Today.Year, DateTime.Today.Month)"/>
                </div>
            </div>
        </div>
        <div class="carousel-item">
            3
        </div>
    </div>
</div>
