@page "/calendar/create"

@using Couple.Client.Pages.Calendar.Components

<CreateUpdateTopBar Title="Create Event"
                    IsEnabled="@IsEnabled"
                    OnClickCallback="@Save" />
<CreateUpdateForm @bind-Title="@ToCreate.Title"
                  @bind-Start="@ToCreate.Start"
                  @bind-End="@ToCreate.End"
                  Added="@Added"
                  AddedChanged="@AddedChanged"
                  Removed="@new()"
                  RemovedChanged="@RemovedChanged"
                  Total="@ToCreate.ToDos" />

